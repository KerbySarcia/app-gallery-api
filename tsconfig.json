{
  "compilerOptions": {
    "target": "ES6", // or ES2015
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "typeRoots": [ "src/types"],
  "include": ["src/**/*.ts", "src/utils/seed.js", "src/types/**/*.d.ts"],
  "exclude": ["node_modules"]
}
